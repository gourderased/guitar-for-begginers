{{>layout/header}}

<h1>게시글 관리</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <div class="row g-3 align-items-center">
                <div class="col-auto">
                    <label for="inputIndex" class="col-form-label">삭제할 게시글 번호 입력:</label>
                </div>
                <div class="form-group col-auto">
                    <input type="number" id="inputIndex" class="form-control" aria-describedby="passwordHelpInline">

                </div>
                <button  type ="button" class="btn btn-danger" id="btn-board-delete"> 게시글 삭제</button>

            </div>


        </div>
    </div>

    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>게시글번호</th>
            <th>제목</th>
            <th>내용</th>
            <th>작성자</th>
            <th>최초 생성일</th>
            <th>최종 수정일</th>

        </tr>
        </thead>
        <tbody id="tbody">
        {{#boards}}
            <tr>
                <td>{{id}}</td>
                <td>{{title}}</td>
                <td>{{content}}</td>
                <td>{{memberLoginId}}</td>
                <td>{{createDate}}</td>
                <td>{{modifiedDate}}</td>

            </tr>
        {{/boards}}
        </tbody>
    </table>
</div>

{{>layout/footer}}
